# AI Provider Configuration
AI_PROVIDER_PRIMARY=openai
AI_PROVIDER_FALLBACK=vertexai

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=asia-northeast1
VERTEX_AI_TEXT_MODEL=gemini-1.5-pro
VERTEX_AI_EMBEDDING_MODEL=text-embedding-004
# VERTEX_AI_KEY_FILENAME=/path/to/service-account-key.json  # Optional: If not using ADC

# Provider Health Check Configuration
HEALTH_CHECK_INTERVAL=300000  # 5 minutes
HEALTH_CHECK_TIMEOUT=10000    # 10 seconds

# Cost Optimization
COST_OPTIMIZATION_ENABLED=true
MONTHLY_BUDGET_LIMIT=100      # USD

# Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Server Configuration
PORT=3000
NODE_ENV=development

# Document Processing Configuration
DOCUMENTS_PATH=./markdown
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Search Configuration
MAX_SEARCH_RESULTS=10
SIMILARITY_THRESHOLD=0.7